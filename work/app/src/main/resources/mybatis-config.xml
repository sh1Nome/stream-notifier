<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <settings>
    <setting name="defaultStatementTimeout" value="60" />
  </settings>
  <typeAliases>
    <typeAlias type="com.re_kid.discordbot.mapper.entity.SystemSetting" alias="SystemSetting" />
  </typeAliases>
  <environments default="postgres">
    <environment id="postgres">
      <transactionManager type="JDBC">
        <property name="skipSetAutoCommitOnClose" value="false" />
      </transactionManager>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}" />
        <property name="url" value="${url}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="db/mapper/SystemSettingMapper.xml" />
  </mappers>
</configuration>